
<%- include('partials/header.ejs') %>

    <!-- content -->
    <main class="py-5">
      <div class="container">
        <% if (message) { %>
          <div style="background: #d4edda; padding: 10px; border: 1px solid #28a745;">
            <%= message %>
          </div>
        <% } %>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
                <div class="card-header card-title">
                  <div class="d-flex align-items-center">
                    <h2 class="mb-0">All Contacts</h2>
                    <div class="ml-auto">
                      <a href="/registation" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add New</a>
                    </div>
                  </div>
                </div>
              <div class="card-body">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% students.forEach( student=>{%> 

                     
                    <tr>
                      <td>1</td>
                      <td><%=student.fname%></td>
                      <td><%=student.lname%></td>
                      <td><%=student.email%></td>
                      <td><%=student.phone%></td>
                      <td width="150">
                        <a href="/<%=student._id%>" class="btn btn-sm btn-circle btn-outline-info" title="Show"><i class="fa fa-eye"></i></a>
                        <a href="/edit/<%=student._id%>" class="btn btn-sm btn-circle btn-outline-secondary" title="Edit"><i class="fa fa-edit"></i></a>
                        <a href="/delete" class="btn btn-sm btn-circle btn-outline-danger" title="Delete" onclick="confirm('Are you sure?')"><i class="fa fa-times"></i></a>
                      </td>
                    </tr>
                    <%  }); %> 
                  </tbody>
                </table> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

  <%- include('partials/footer.ejs') %>